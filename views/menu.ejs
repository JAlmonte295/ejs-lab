<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Menu</title>
</head>
<%- include('./partials/nav') %> <!--- include nav.ejs partial --->
<body>
  <h1>Full Menu</h1>
    <h2>Mains</h2>
    <% menu.forEach(function(item) { %>
        <% if (item.category === 'mains') { %>
            <div>
            <h2><%= item.name %> </h2>
            <h3><%= item.rating %> ⭐️</h3>
            <h3>＄<%= item.price %></h3>
            <p><%= item.details %></p>
            </div>
        <% } %>
    <% }); %>
    <h2>Desserts</h2>
    <% menu.forEach(function(item) { %>
        <% if (item.category === 'desserts') { %>
            <div>
            <h2><%= item.name %> </h2>
            <h3><%= item.rating %> ⭐️</h3>
            <h3>＄<%= item.price %></h3>
            <p><%= item.details %></p>
            </div>
        <% } %>
    <% }); %>
    <h2>Sides</h2>
    <% menu.forEach(function(item) { %>
        <% if (item.category === 'sides') { %>
            <div>
            <h2><%= item.name %> </h2>
            <h3><%= item.rating %> ⭐️</h3>
            <h3>＄<%= item.price %></h3>
            <p><%= item.details %></p>
            </div>
        <% } %>
    <% }); %>

</body>
</html>
